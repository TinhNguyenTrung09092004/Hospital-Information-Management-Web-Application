@{
    var permissionIds = User.FindAll("PermissionID").Select(c => c.Value).ToList();
    var username = User.Identity?.Name ?? "Người dùng";
}

<aside class="sidebar">
    <h4>Xin chào, @username</h4>
    <ul>
        @if (permissionIds.Contains("1"))
        {
            <li><a asp-controller="NhanSu" asp-action="Index">Quản lý nhân sự</a></li>
        }

        @if (permissionIds.Contains("2"))
        {
            <li><a asp-controller="Thuoc" asp-action="Index">Quản lý thuốc</a></li>
        }

        @if (permissionIds.Contains("3"))
        {
            <li><a asp-controller="LichLamViec" asp-action="Index">Lịch làm việc</a></li>
        }

    </ul>
</aside>

